    <h1>Pedidos</h1>
    <div class="container" >
        <table id="huesped" class="table table-dark" style="width: 100%;">
                <thead>
                <tr>
                    <th scope="col">Cuenta</th>
                    <th scope="col">Mesero</th>
                    <th scope="col">Producto </th>
                    <th scope="col">Cantidad </th>
                    <th scope="col">Hora</th>
