<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<meta name="Description" content="Enter your description here"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link rel="stylesheet" href="css/style.css">
  <title>Historial Dia sol</title>
</head>
<body>
    <header>
        <%- include('Navbar'); %>
    </header>
    <br>
    <div class="espacios">
    <h1>Dias de Sol</h1>
    <div class="container" >
        <table id="huesped" class="table table-dark" style="width: 100%;">
                <thead>
                <tr>
                    <th scope="col">Comanda</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Adultos</th>
                    <th scope="col">Niños</th>
                    <th scope="col">Bebes</th>
                    <th scope="col">Fecha Ingreso</th>
                    <th scope="col">Opcion</th>
                </tr>
            </thead>
            <tbody>
                <%  DS.forEach((DS) => { %>
                    <tr>
                        <td> <%= DS.Comanda %></td>
                        <td> <%= DS.Nombre %></td>
                        <td> <%= DS.Adultos %></td>
                        <td> <%= DS.Niños %></td>
                        <td> <%= DS.Bebes %></td>
                        <td> <%= DS.Ingreso %></td>
                        <td> 
                            <a type="button" class="btnEditarIngreso btn btn-outline-primary bi bi-pencil"> </a>
                            <a href="/eliminarDS/<%= DS.id %>" type="button" class="btnAgregarProducto btn btn-outline-danger  bi bi-trash"> </a>
                        </td>
                    </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</div>
  <!-- ventana modal -->
  <div id="modalIngreso" class="modal fade" tabindex="-1" aria-labelledby="modalIngreso" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="exampleModalLabel">Ingresar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/EditarDS" method="POST">
                    <div class="mb-3">
                        <input id="Comanda" name="Comanda" type="text" class="form-control" placeholder="Comanda" required>
                    </div>
                    <div class="mb-3">
                        <input id="Nombre" name="Nombre" type="text" class="form-control" placeholder="Nombre Completo" required>
                    </div>
                      <div clas s="mb-3">
                        <input id="Adultos" name="Adultos" type="text" class="form-control" placeholder="Adultos" >
                        <input id="Niños" name="Niños" type="text" class="form-control" placeholder="Niños" >
                        <input id="Bebes" name="Bebes" type="text" class="form-control" placeholder="Bebes" >
                      </div>
                      <div class="mb-3">
                        <input id="Fecha" name="Fecha" type="text" class="form-control" value="">
                      </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary">Ingresar</button>
                      </div>
                    </div>
                </form>
            </div>
        </div>
</div>
<script src="js/editarDS.js"></script>
</body>
</html>