                    <th scope="col">Fecha</th>
                    <th scope="col">Opcion</th>
                </tr>
            </thead>
            <tbody>
                <%  pagos.forEach((pago) => { %>
                    <tr>
                        <td> <%= pago.Cuenta %></td>
                        <td> <%= pago.Monto %></td>
                        <td> <%= pago.Tipo %></td>
                        <td> <%= pago.Montoextra %></td>
                        <td> <%= pago.Tipoextra %></td>
                        <td> <%= pago.Fecha %></td>
