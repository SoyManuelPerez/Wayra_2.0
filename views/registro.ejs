<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/styleRegitrar.css">
  <link rel="stylesheet" href="css/style.css">
  <title>Registro</title>
</head>
<body>
<header>
  <%- include('Navbar'); %>
</header>
<div class="container espacio">
  <div class="login-page espacio">
    <h1>Registrar Usuario</h1>
    <br>
    <form action="/CrearUsuario" method="POST" class="form">
      <input type="text" name="user" id="user" placeholder="Nombre de usuario">
      <select name="type" id="Tipo" class="form-select form-select-sm" aria-label=".form-select-sm example" required >
        <option value="Null">Tipo de usuario</option>
        <option value="bar">Bar</option>
        <option value="restaurante">Restaurante</option>
        <option value="mesero">Mesero</option>
        <option value="admin">Admin</option>
      </select>
      <input type="password" name="password" id="password" placeholder="Contraseña">
      <button type="submit">Registrar</button>
      <p class="error escondido">Error al registrarse</p>
    </form>
  </div>
</div>
<div class="container">
  <h2>Usuarios</h2>
  <div class="container" >
      <table id="Usuarios" class="tabla table table-dark "  >
              <thead>
              <tr>
                  <th scope="col">Nombre</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Contraseña</th>
                  <th scope="col">Opciones</th>
              </tr>
          </thead>
          <tbody>
            <% usuario.forEach( (usuario) => { %>
              <tr>
                  <td> <%= usuario.user %></td>
                  <td> <%= usuario.type %></td>
                  <td> <%= usuario.password %></td>
                  <td> 
                      <a type="button" class="btnEditarUsuario btn btn-outline-primary bi bi-pencil"> </a>
                      <a href="/borrarUsuario/<%= usuario.id %>" class="btn btn-outline-danger bi bi-trash"> </a>
                  </td>
              </tr>
         <% }) %>
          </tbody>
      </table>
  </div>
  <!-- ventana modal -->
<div id="modalUsuario" class="modal fade" tabindex="-1" aria-labelledby="modalUsuario" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="/editarUsuario" method="POST">
                  <div class="mb-3">
                      <label for="User" class="col-form-label letra">Usuario:</label>
                      <input id="User" name="User" type="text" class="form-control" value="">
                  </div>
                  <div>
                    <label for="type" class="col-form-label letra">Tipo:</label>
                    <select name="type" id="type" class="form-select form-select-sm" aria-label=".form-select-sm example" required >
                      <option value="Null">Tipo de usuario</option>
                      <option value="bar">Bar</option>
                      <option value="restaurante">Restaurante</option>
                      <option value="mesero">Mesero</option>
                      <option value="admin">Admin</option>
                    </select>
                  </div>
                  <div>
                      <label for="password" class="col-form-label letra">Contraseña:</label>
                      <input id="password" name="password" type="password" class="form-control" value="">
                  </div>
                  <div class="modal-footer">
                      <button type="submit" class="btn btn-primary">Actualizar</button>
                      </div>
              </form>
          </div>
      </div>
  </div>
</div>
<script src="js/modalUsuario.js"></script>
</body>
</html>
